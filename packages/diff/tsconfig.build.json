{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override noEmit to enable compilation
    "noEmit": false,

    // Generate TypeScript declarations only (JS will be generated by Bun.build)
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "sourceMap": false,

    // Output configuration
    "outDir": "./dist",
    "rootDir": ".",

    // Module resolution - use ESNext for compilation
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",

    // Disable TypeScript extensions for compilation
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,

    // Type checking
    "skipLibCheck": true,
    "noEmitOnError": false,

    // Preserve strict settings from base
    "strict": true,
    "lib": ["ESNext"],

    // Additional settings
    "allowJs": true,
    "moduleDetection": "force",

    // Package-specific settings
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts", "bunpack.build.ts"]
}
