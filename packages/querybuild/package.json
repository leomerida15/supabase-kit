{
    "type": "module",
    "license": "MIT",
    "version": "1.12.2",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./useSupabase": {
            "types": "./dist/useSupabase/index.d.ts",
            "import": "./dist/useSupabase/index.js",
            "default": "./dist/useSupabase/index.js"
        }
    },
    "name": "@supabase-kit/build",
    "author": {
        "name": "leomerida15",
        "email": "dimasmerida15@gmail.com",
        "url": "https://github.com/leomerida15"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/leomerida15/supabase-kit"
    },
    "scripts": {
        "build": "bun run bunpack.build.ts",
        "types": "bunx tsc --project tsconfig.declaration.json",
        "dev": "bun --watch ./src/index.ts",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "test": "bun test",
        "docs": "docsify serve docs",
        "docs:dev": "docsify serve docs --port 3001"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.2.0",
        "@tsconfig/recommended": "^1.0.8",
        "@tsconfig/vite-react": "^3.4.0",
        "@types/react": "^19.1.5",
        "@types/react-dom": "^19.1.5",
        "docsify": "^4.13.1",
        "docsify-cli": "^4.4.4",
        "eslint-plugin-prettier": "5.0.0",
        "husky": "^9.1.7",
        "prettier": "^3.5.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "size-limit": "^11.2.0",
        "tslib": "^2.8.1",
        "type-fest": "^4.41.0",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "@supabase/supabase-js": "^2.50.5",
        "@tanstack/react-query": "^5.77.0"
    },
    "bugs": {
        "url": "https://github.com/leomerida15/supabase-kit/issues"
    },
    "engines": {
        "node": ">=20",
        "bun": ">=1.3"
    },
    "files": [
        "dist"
    ],
    "homepage": "https://leomerida15.github.io/supabase-kit",
    "husky": {
        "hooks": {
            "pre-commit": "dts lint"
        }
    },
    "jest": {
        "testEnvironment": "jsdom"
    },
    "keywords": [
        "supabase",
        "react",
        "supabase-kit",
        "@tanstack/query",
        "@tanstack/react-query",
        "react-query",
        "supabase-react-query",
        "supabase-react-hooks",
        "supabase-auth",
        "supabase-storage",
        "supabase-storage-hooks",
        "supabase-storage-react",
        "supabase-storage-react-query",
        "supabase-realtime",
        "supabase-realtime-hooks",
        "supabase-realtime-react",
        "supabase-realtime-react-query",
        "cache"
    ]
}
